---
import HeaderLink from "./HeaderLink.astro";
import DropdownMenuHeader from "./DropdownMenuHeader";
import { SITE_TITLE } from "../consts";
---

<header class="bg-accent-dark">
	<div class="relative justify-between md:justify-center lg:justify-between flex flex-row">
		<img src="/logo-font.png" class="lg:h-36 lg:w-36 md:h-28 md:w-28 h-24 w-24 justify-center flex items-center" />
		<div class=" flex-row relative hidden lg:flex md:flex justify-center items-center">
				<HeaderLink href="/menu" class="lg:ml-10 ml-3 text-text-sm text-accent-light">Menu</HeaderLink>
				<HeaderLink href="/menu" class="lg:ml-10 ml-3 text-text-sm text-accent-light">Catering</HeaderLink>
				<HeaderLink href="/menu" class="lg:ml-10 ml-3 text-text-sm text-accent-light">Location</HeaderLink>
				<HeaderLink href="/menu" class="lg:ml-10 ml-3 text-text-sm border-2 bg-accent-light lg:px-4 px-2 py-1 rounded-md text-black mr-5 lg:mr-7">Order Online</HeaderLink>
		</div>
		<div class="flex items-center gap-6 text-base md:hidden lg:hidden">
			<DropdownMenuHeader client:visible />
		</div>
	</div>
</header>
