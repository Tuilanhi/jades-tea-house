---
import HeaderLink from "./HeaderLink.astro";
import DropdownMenuHeader from "./DropdownMenuHeader";
import { SITE_TITLE } from "../consts";
---

<header class="">
  <div
    class="relative flex flex-row justify-between bg-accent-dark md:justify-center lg:justify-between"
  >
    <a href="/">
      <img
        src="/logo-font.png"
        class="flex h-24 w-24 items-center justify-center md:h-28 md:w-28 lg:h-32 lg:w-32"
      />
    </a>
    <div
      class="relative hidden flex-row items-center justify-center md:flex lg:flex"
    >
      <HeaderLink
        href="/menu"
        class="ml-3 text-text-sm text-white hover:underline lg:ml-10"
      >
        Menu
      </HeaderLink>
      <HeaderLink
        href="/catering"
        class="ml-3 text-text-sm text-white hover:underline lg:ml-10"
      >
        Catering
      </HeaderLink>
      <HeaderLink
        href="/delivery"
        class="ml-3 mr-5 rounded-md border-2 border-none bg-accent-lighter px-2 py-2 text-text-sm text-black lg:ml-10 lg:mr-7 lg:px-4"
      >
        Delivery
      </HeaderLink>
    </div>
    <div class="flex items-center gap-2 text-base md:hidden lg:hidden">
      <DropdownMenuHeader client:visible />
    </div>
  </div>
</header>
