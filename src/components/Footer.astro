---
const today = new Date();
import {
  IoMailSharp,
  IoLogoFacebook,
  IoLogoInstagram,
} from "react-icons/io5/index.js";
import { INSTAGRAM_URL, FACEBOOK_URL } from "../consts";
---

<footer class="bottom-0 px-5">
  <hr class="border-t-4 border-accent-dark" />
  <div
    class="relative flex flex-row justify-center gap-6 py-10 lg:gap-32 lg:py-14"
  >
    <div class="relative flex flex-col" style="max-width: 200px;">
      <h1
        class="mb-8 text-text-xs font-semibold sm:text-text-2sm lg:text-text-md"
      >
        Location
      </h1>
      <h3 class="text-text-xxs sm:text-text-xs lg:text-text-2sm">
        5475 West Loop S, Ste 170, Houston, TX 77081
      </h3>
    </div>
    <div class="relative flex flex-col">
      <h1
        class="mb-8 text-text-xs font-semibold sm:text-text-2sm lg:text-text-md"
      >
        Operating Hours
      </h1>
      <ul class="space-y-4 text-text-xxs sm:text-text-xs lg:text-text-2sm">
        <li>Mon-Saturday: 11:00am - 8pm</li>
        <li>Sunday: 12:00am - 8pm</li>
      </ul>
    </div>
    <div class="relative flex flex-col">
      <h1
        class="mb-8 text-text-xs font-semibold sm:text-text-2sm lg:text-text-md text-center"
      >
        Contact Us
      </h1>
      <ul class="mb-7 flex flex-row items-center justify-center gap-4">
        <li class="transform transition-transform hover:scale-125">
          <a href={INSTAGRAM_URL}>
            <IoLogoInstagram
              className="h-5 w-5 sm:h-7 sm:w-7 lg:h-9 lg:w-9 text-accent-dark"
              aria-hidden="true"
            />
          </a>
        </li>
        <li class="transform transition-transform hover:scale-125">
          <a href={FACEBOOK_URL}>
            <IoLogoFacebook
              className="h-5 w-5 sm:h-7 sm:w-7 lg:h-9 lg:w-9 text-accent-dark"
              aria-hidden="true"
            />
          </a>
        </li>
        <li class="transform transition-transform hover:scale-125">
          <a href="mailto:Jadesteahouse2019@gmail.com">
            <IoMailSharp
              className="h-5 w-5 sm:h-7 sm:w-7 lg:h-9 lg:w-9 text-accent-dark"
              aria-hidden="true"
            />
          </a>
        </li>
      </ul>
      <h3
        class="flex justify-center text-text-xxs sm:text-text-xs lg:text-text-2sm"
      >
        (281) 974-1437
      </h3>
    </div>
  </div>
  <div
    class="relative flex justify-center bg-accent-dark p-4 text-center text-text-xxs text-white"
  >
    &copy; {today.getFullYear()} JADE'S TEA HOUSE
  </div>
</footer>
